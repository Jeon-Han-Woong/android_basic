<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionHint="키워드를 입력해주세요!"
        android:completionThreshold="2"></AutoCompleteTextView>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionHint="여러 단어를 자동완성으로"
        android:completionThreshold="2"></MultiAutoCompleteTextView>

</LinearLayout>