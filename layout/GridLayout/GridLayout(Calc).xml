<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="5"
    android:rowCount="6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="First Num"
        ></EditText>

    <EditText
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="Second Num"
        ></EditText>

    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:text="0"
        android:id="@+id/btn0">
    </Button>

    <Button
        android:layout_row="2"
        android:layout_column="1"
        android:text="1"
        android:id="@+id/btn1">
    </Button>

    <Button
        android:layout_row="2"
        android:layout_column="2"
        android:text="2"
        android:id="@+id/btn2">
    </Button>

    <Button
        android:layout_row="2"
        android:layout_column="3"
        android:text="3"
        android:id="@+id/btn3">
    </Button>

    <Button
        android:layout_row="2"
        android:layout_column="4"
        android:text="4"
        android:id="@+id/btn4">
    </Button>

    <Button
        android:layout_row="3"
        android:layout_column="0"
        android:text="5"
        android:id="@+id/btn5">
    </Button>

    <Button
        android:layout_row="3"
        android:layout_column="1"
        android:text="6"
        android:id="@+id/btn6">
    </Button>

    <Button
        android:layout_row="3"
        android:layout_column="2"
        android:text="7"
        android:id="@+id/btn7">
    </Button>

    <Button
        android:layout_row="3"
        android:layout_column="3"
        android:text="8"
        android:id="@+id/btn8">
    </Button>

    <Button
        android:layout_row="3"
        android:layout_column="4"

        android:text="9"
        android:id="@+id/btn9">
    </Button>

    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:text="+"
        android:id="@+id/plus"></Button>

    <Button
        android:layout_row="4"
        android:layout_column="1"
        android:text="-"
        android:id="@+id/minus"></Button>

    <Button
        android:layout_row="4"
        android:layout_column="2"
        android:text="*"
        android:id="@+id/multiple"></Button>

    <Button
        android:layout_row="4"
        android:layout_column="3"
        android:text="/"
        android:id="@+id/division"></Button>

    <Button
        android:layout_row="4"
        android:layout_column="4"
        android:text="%"
        android:id="@+id/remain"></Button>

    <TextView
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="계산 결과 : "
        android:textSize="30dp"></TextView>

    <TextView
        android:layout_row="5"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:text="결과값"
        android:textSize="30dp"
        android:id="@+id/result"></TextView>

</GridLayout>