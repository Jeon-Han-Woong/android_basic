<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imageman"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="-2dp"></ImageView>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="315dp"
        android:layout_height="305dp"
        android:src="@drawable/imageman"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        tools:layout_editor_absoluteX="48dp"></ImageButton>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/imageman"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="139dp"></ImageButton>

    <ImageButton
        android:layout_width="262dp"
        android:layout_height="171dp"
        android:scaleType="fitXY"
        android:src="@drawable/imageman"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        tools:layout_editor_absoluteX="74dp"></ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>